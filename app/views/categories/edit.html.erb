<%= provide(:title, 'Edit Category') %>

<h1>Update your Category</h1>

<div class="row">
	<div class="span6 offset3">
		<%= nested_form_for @category, url: user_category_path do |f| %>
			<%= render 'cat_fields', f: f %>

			<%= f.fields_for :tags do |tag_form|  %>
				<%= tag_form.label :name, "Tag Label" %>			
				<%= tag_form.text_field :name , class: "span5" %>
				<%= tag_form.link_to_remove "Remove" %>
			<% end %>
			<p><%= f.link_to_add "Add Tag",:tags %></p>
					
			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>

</div>