<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span2">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span10">
		<% if @user.trades.any? %>
			<h3>Trades (<%= @user.trades.count %>)</h3>
			<table class="trades table">
				<thead>
					<th>Date</th>
					<th>Position</th>
					<th>Description</th>

				</thead>
				<%= render @trades %>
			</table>
			<%= will_paginate @trades %>
		<% end %>
	</div>
</div>