<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.trades.any? %>
			<h3>Trades (<%= @user.trades.count %>)</h3>
			<ol class="trades">
				<%= render @trades %>
			</ol>
			<%= will_paginate @trades %>
		<% end %>
	</div>
</div>